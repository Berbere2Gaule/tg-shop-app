{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["TELEGRAM_BOT_TOKEN"]
    },
    "clean": { "cache": false, "persistent": true },
    "lint": { "dependsOn": ["^lint"] },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["TELEGRAM_BOT_TOKEN"]
    }
  }
}
